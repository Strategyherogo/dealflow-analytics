# DealFlow Analytics Environment Variables
# Copy this file to .env and fill in your values

# API Keys (Optional - the app works without these but with limited features)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GITHUB_TOKEN=your_github_personal_access_token_here
NEWS_API_KEY=your_newsapi_org_key_here

# Database Configuration (for production)
DB_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://dealflow:your_secure_password_here@postgres:5432/dealflow

# Redis Configuration (Optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Domain Configuration (for production deployment)
DOMAIN_NAME=api.your-domain.com

# DigitalOcean Configuration (for deployment)
DO_ACCESS_TOKEN=your_digitalocean_api_token_here
DO_DROPLET_NAME=dealflow-analytics
DO_DROPLET_SIZE=s-2vcpu-4gb
DO_DROPLET_REGION=nyc1

# Security
SECRET_KEY=generate_a_random_secret_key_here
ALLOWED_ORIGINS=chrome-extension://*,http://localhost:*

# Feature Flags
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_PDF_EXPORT=true

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=INFO