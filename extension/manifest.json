{
  "manifest_version": 3,
  "name": "DealFlow Analytics",
  "version": "1.0.0",
  "description": "Instant company analysis for VCs - analyze any company in 10 seconds",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "downloads"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://www.crunchbase.com/*",
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "js/background_simple.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content_final.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}